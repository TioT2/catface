    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch assembler",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceRoot}/build/app/assembler/cf_assembler",
            "preLaunchTask": "CMake: build",
            "args": [],
            "externalConsole": false,
            "stopAtEntry": false,
            "cwd": "${workspaceRoot}",
            "environment": [],
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "(gdb) Launch disassembler",
